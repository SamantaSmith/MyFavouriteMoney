<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create-table-wallet" author="Moskin">
        <createTable tableName="wallet">
            <column name="wallet_id" type="integer" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="user_id" type="integer" autoIncrement="true">
                <constraints nullable="false" foreignKeyName="fk_user_id_user" references="user(user_id)"/>
            </column>
            <column name="type" type="integer" autoIncrement="true">
                <constraints nullable="false"/>
            </column>
            <column name="money" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>